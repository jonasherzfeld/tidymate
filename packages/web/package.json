        "@sveltejs/kit": "^2.5.27",
        "@sveltejs/vite-plugin-svelte": "^4.0.0",
        "bits-ui": "^0.21.16",
        "clsx": "^2.1.1",
        "eslint": "^8.28.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-svelte": "^2.45.1",
        "prettier": "^3.1.0",
        "prettier-plugin-svelte": "^3.2.6",
        "svelte": "^5.0.0",
        "svelte-check": "^4.0.5",
        "tailwind-merge": "^2.5.4",
