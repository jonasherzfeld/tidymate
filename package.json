{
    "name": "tidymate",
    "private": true,
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "dev:web": "turbo dev --filter=@tidymate/web",
        "dev:server": "turbo dev --filter=@tidymate/server",
        "dev:docs": "turbo dev --filter=@tidymate/docs",
        "lint": "turbo lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "devDependencies": {
        "daisyui": "^4.12.13",
        "postcss-normalize": "^13.0.1",
        "prettier": "^3.2.5",
        "svelte2tsx": "^0.7.22",
        "turbo": "^2.2.3",
        "typescript": "^5.4.5"
    },
    "engines": {
        "node": ">=18"
    },
    "packageManager": "npm@10.8.3",
    "workspaces": [
        "packages/*"
    ],
    "dependencies": {
        "autoprefixer": "^10.4.20",
        "prettier-plugin-svelte": "^3.2.2",
        "tailwindcss": "^3.4.14",
        "typescript": "^5.5.4",
        "vitest": "^2.1.3"
    }
}
