{
    "name": "tidymate",
    "private": true,
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "dev:web": "turbo dev --filter=@tidymate/web",
        "dev:server": "turbo dev --filter=@tidymate/server",
        "dev:docs": "turbo dev --filter=@tidymate/docs",
        "lint": "turbo lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "devDependencies": {
        "prettier": "^3.2.5",
        "turbo": "^2.1.1",
        "typescript": "^5.4.5"
    },
    "engines": {
        "node": ">=18"
    },
    "packageManager": "npm@10.8.3",
    "workspaces": [
        "packages/*"
    ],
    "dependencies": {
        "nextra": "^2.13.4",
        "nextra-theme-docs": "^2.13.4",
        "nextra-theme-blog": "^2.13.4",
        "typescript": "^5.5.4",
        "prettier-plugin-svelte": "^3.2.2"
    }
}
